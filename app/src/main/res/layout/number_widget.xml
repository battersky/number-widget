<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BtnAddRelativeLayout" 
        android:paddingBottom="10.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="2.0dip" 
        android:layout_alignParentTop="true" 
        android:layout_alignParentRight="true">
        <Button android:id="@+id/BtnIncreaseButton" 
            android:background="@drawable/add_right_btn" 
            android:layout_width="50dp" 
            android:layout_height="35dp" 
            android:layout_alignParentTop="true" 
            android:layout_alignParentRight="true" />
        <Button android:id="@+id/BtnNumberButton" 
            android:background="@drawable/num_bg"
            android:clickable="false" 
            android:layout_width="50dp" 
            android:layout_height="35dp" 
            android:text="0" 
            android:layout_toLeftOf="@id/BtnIncreaseButton" 
            android:layout_alignParentTop="true"
            style="@style/FontStyleBoldNumber"
            android:visibility="invisible" />

        <Button
            android:id="@+id/BtnDecreaseButton"
            android:layout_width="50dp" 
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/BtnNumberButton"
            android:background="@drawable/dec_btn"
            android:visibility="invisible" />

</merge>
